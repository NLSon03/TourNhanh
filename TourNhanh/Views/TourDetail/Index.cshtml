                    <!--    main content    -->
                    <div class="main-content">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a class="nav-link1 active" aria-current="page" href="#diemnhanhanhtrinh">Điểm nhấn hành trình</a>
                            </li>
