    {
        -webkit-text-fill-color: #8dc63f;
        color: #8dc63f;
    } */

   /*  .tour-details .tour-info {
        width: 437px;
    }
 */
	.tour-info {
		display: grid;
        width:410px;
		margin-top: 20px;
        margin-left: 10px;
		color: #000;
        padding: 15px 20px;
		border-radius: 10px;
		box-shadow: 0 0 32px rgba(0,0,0,.12) !important;
		grid-template-columns: repeat(2, 1fr);
		font-size: 15px;
	}

    .product-details {
        margin-left: 10px;
        padding: 15px 20px;
        border-radius: 10px;
        box-shadow: 0 0 32px rgba(0,0,0,.12) !important;
    }

    .product-details .product-links li, .product-details .product-options label , .product-details label{        
         font-weight: 600;
    }

        .product-details .product-options .input-select {         
            width: 150px;
        }

        .product-details .product-price {
            margin-bottom: 0;
        }

        .product-details .product-available {
            margin-left: 0;
        }

    .content_lichtrinh .product-main-img {
        object-fit: cover;
    }

    #detail_main_img img {
        height: 70vh;
        width: 100%;
        border-radius: 14px ;
        object-fit: cover;
        margin-bottom: 15px;
    }
    #detail_img img {
        height: 180px;
        width: 100%;
        border-radius: 10px; 
        margin-right: 10px;
        object-fit: cover;

    }
    .title-gradient {
        margin-bottom: 30px; 
        background-color: var(--bs-linear-color);
        background-image: var(--bs-linear-img);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 600 ;
        text-align: center;
        font-size: 50px;
    }

    .slick-prev, .slick-next {
        top: 25%;
    }

    .slick-dots {
        bottom: 133px;
    }
    .main-content {
        position: relative;
        top: -100px;
    }

    .main-content .nav-tabs {
        margin-bottom: 20px;
    }   
    .title-price-list {
        border-left: 3px solid #f79321;
        padding-left: 20px;
        font-weight:600;
        color: #215390;
        font-size: 20px;
    }

</style>


