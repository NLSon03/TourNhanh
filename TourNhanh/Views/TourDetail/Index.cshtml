
@model IEnumerable<TourNhanh.Models.TourDetail>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var view = ViewBag.Tour;

}

<style>

    .section {
        padding: 50px 0 80px;
    }
    .tour-info i, .product-details i {
		color: #8dc63f;
	}

