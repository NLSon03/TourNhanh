@page
@model ExternalLoginModel

@{
    ViewData["Title"] = "Register";
}
<style>
    .externallogin {
        background-image: url(https://www.vinhomescentralpark.co/wp-content/uploads/2021/04/landmark81-2.jpeg);
        background-size: cover;
        background-position: top left;
        background-attachment: fixed;
        color: #fff;
        padding: 150px 0 100px;
        text-align: center;
    }

    .primary-btn {
        display: inline-block;
        padding: 16px 40px;
        background-color: #2567f1;
        border: 3px solid #2567f1;
        border-radius: 40px;
        color: #FFF;
        font-weight: 700;
        text-align: center;
        -webkit-transition: 0.2s all;
        transition: 0.2s all;
    }

        .primary-btn:hover {
            color: white;
            border: 1px solid #2567f1;
            background-image: linear-gradient(90deg, #00DBDE 0%, #FC00FF 100%);
            transition: ease 0.7s;
        }

    .title-gradient {
        font-size: 30px;
        font-weight: 700;
        background-color: #00DBDE;
        background-image: linear-gradient(90deg, #00DBDE 0%, #FC00FF 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>

<section class="externallogin">
    <div class="container">
        <p id="external-login-description" class="text-info text-light">
            Bạn đã tạo tài khoản thành công.
            Chỉ cần một bước nữa thôi
        </p>

        <div class="row d-flex justify-content-center">
            <div class="col-md-4">
                <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.FullName" class="form-control" autocomplete="fullname" aria-required="true" placeholder="Nguyen Van A" />
                        <label asp-for="Input.FullName" class="form-label" style="color:#999;">Họ và tên</label>
                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="Email" />
                        <label asp-for="Input.Email" class="form-label" style="color:#999;"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="phonenumber" aria-required="true" placeholder="Điện thoại" />
                        <label asp-for="Input.PhoneNumber" class="form-label" style="color:#999;">Số điện thoại</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-lg primary-btn">Hoàn tất</button>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
