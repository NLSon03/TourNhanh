@model TourNhanh.Models.Blog
@{
	ViewData["Title"] = "Kiểm duyệt";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
	/* Custom styles for the content container */
	.content-container {
		font-family: 'Arial, sans-serif';
		line-height: 1.6;
		color: #333;
	}

		/* Styling paragraphs */
		.content-container p {
			margin-bottom: 1em;
			font-size: 1rem;
		}

		/* Styling headings */
		.content-container h1,
		.content-container h2,
		.content-container h3,
		.content-container h4,
		.content-container h5,
		.content-container h6 {
			margin-top: 1.5em;
			margin-bottom: 0.5em;
			color: #2c3e50;
		}

		/* Styling images */
		.content-container img {
			max-width: 100%;
			height: auto;
			margin: 10px 0;
			border-radius: 5px;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		}

		/* Styling blockquotes */
		.content-container blockquote {
			margin: 1em 0;
			padding: 0.5em 1em;
			background-color: #f9f9f9;
			border-left: 5px solid #ccc;
			font-style: italic;
			color: #555;
		}

		/* Styling lists */
		.content-container ul,
		.content-container ol {
			padding-left: 2em;
			margin-bottom: 1em;
		}

		/* Styling links */
		.content-container a {
			color: #3498db;
			text-decoration: none;
		}

			.content-container a:hover {
				text-decoration: underline;
			}
</style>
<div>
	<img class="img-fluid w-100 rounded-top" src="@Model.ImageUrl" alt="Image">
</div>
<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-8">
			<form>
				<div>
					<h2>Tác giả: @Model.Author  | @Model.CreatedAt  </h2>
				</div>
				<div>
					<h3>Tiêu đề: @Model.Title </h3>
				</div>
				<hr />
				<div class="px-3 py-2 content-container">
					<!-- Lề của phần nội dung -->
					@Html.Raw(Model.Content)
				</div>
				<div class="row">
					<div class="col-md-6 text-center">
						<a asp-action="Accept" asp-route-id="@Model.Id" class="btn btn-success btn-lg">Chấp nhận</a>
					</div>
					<div class="col-md-6 text-center">
						<a asp-action="Reject" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">Từ chối</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
