@model TourNhanh.Models.Tour

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-header-2">
                            <h5>Xóa tour</h5>
                        </div>

                        <form asp-action="Delete" asp-controller="Tour" class="theme-form theme-form-2 mega-form" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Tên tour</label>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.Name)
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Thông tin</label>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.Description)
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Danh mục</label>
                                    <div class="col-sm-10">
                                        @{
                                            var categoryName = Model.Category != null ? Model.Category.Name : null;
                                        }
                                        @Html.DisplayFor(model => categoryName)
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Giá</label>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.Price)
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Phương tiện</label>
                                    <div class="col-sm-10">
                                        @{
                                            var transportName = Model.Transport != null ? Model.Transport.Name : null;
                                        }
                                        @Html.DisplayFor(model => transportName)
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Hình ảnh chính</label>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.MainImageUrl)
                                    </div>
                                </div>
                                <div class="card-footer text-end border-0 pt-0">
                                    <input type="hidden" asp-for="Id" />
                                    <button class="btn btn-primary me-3" type="submit">Xóa</button>
                                    <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Tour" asp-action="Index">Hủy bỏ</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
