@model TourNhanh.Models.Category


@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

    var category = ViewBag.category;

}

<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-header-2">
                            <h5>Sửa loại tour</h5>
                        </div>

                        <form asp-action="Update" class="theme-form theme-form-2 mega-form" method="post" action="" enctype="multipart/form-data">
                            <div class="row">
                                <input type="hidden" asp-for="Id" />
                                <div class="mb-4 row align-items-center">
                                    <label asp-for="Name" class="form-label-title col-sm-2 mb-0">Danh mục tour</label>
                                    <div class="col-sm-8">
                                        <input asp-for="Name" class="form-control" type="text" value="@category.Name" name="Name" required />
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label asp-for="Description" class="form-label-title col-sm-2 mb-0">Thông tin</label>
                                    <div class="col-sm-8">
                                        <input asp-for="Description" class="form-control" type="text" value="@category.Description" name="Description" />
                                    </div>
                                </div>

                                <div class="card-footer text-end border-0 pt-0">
@*                                     <input class="form-control" type="number" value="<product_id o day nếu cập nhật>" name="id" hidden />
 *@                                    <button class="btn btn-primary me-3" type="submit">Cập nhật</button>
                                    <button class="btn btn-outline-primary me-3"><a action="Index">Trở về</a></button>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>