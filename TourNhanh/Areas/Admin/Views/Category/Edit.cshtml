@model TourNhanh.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-header-2">
                            <h5>Sửa danh mục</h5>
                        </div>

                        <form asp-action="Edit" class="theme-form theme-form-2 mega-form" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Tên danh mục</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="Name" placeholder="Category Name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Thông tin</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="Description" placeholder="Description" />
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="card-footer text-end border-0 pt-0">
                                    <input type="hidden" asp-for="Id" /> <!-- Hidden input để gửi Id của category -->
                                    <button class="btn btn-primary me-3" type="submit">Xác nhận</button>
                                    <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Category" asp-action="Index">Hủy bỏ</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>