@model TourNhanh.Models.Hotel
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var hotel = ViewBag.hotel;
}

<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-header-2">
                            <h5>Xóa khách sạn</h5>
                        </div>

                        <form asp-action="Delete" class="theme-form theme-form-2 mega-form" method="post" action="" enctype="multipart/form-data">
                            <div class="row">
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Tên khách sạn</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" value="@hotel.Name" name="Name" disabled/>
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label asp-for="Address" class="form-label-title col-sm-2 mb-0">Địa chỉ</label>
                                    <div class="col-sm-8">
                                        <input asp-for="Address" class="form-control" type="text" value="@hotel.Address" name="Address" />
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label asp-for="Rating" class="form-label-title col-sm-2 mb-0">Đánh giá</label>
                                    <div class="col-sm-8">
                                        <input asp-for="Rating" class="form-control" type="text" value="@hotel.Rating" name="Rating" />
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label asp-for="Description" class="form-label-title col-sm-2 mb-0">Hình ảnh</label>
                                    <div class="col-sm-8">
                                        <input asp-for="ImageUrl" class="form-control" type="text" value="@hotel.ImgageUrl" name="ImageUrl" />
                                    </div>
                                </div>
                             
                                <div class="card-footer text-end border-0 pt-0">
                                    <input class="form-control" type="number" value="" name="" hidden />
                                    <button class="btn btn-primary me-3" type="submit">Xóa khách sạn</button>
                                    <button class="btn btn-outline-primary me-3"><a action="Index">Trở về</a></button>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
