@model TourNhanh.Models.Hotel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-header-2">
                            <h5>Xóa khách sạn</h5>
                        </div>

                        <form asp-action="Delete" asp-controller="Hotel" class="theme-form theme-form-2 mega-form" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Tên khách sạn</label>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.Name)
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Địa chỉ</label>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.Address)
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Xếp hạng</label>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.Rating)
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">URL Hình ảnh</label>
                                    <div class="col-sm-10">
                                        <img src="@Model.ImageUrl" />
                                    </div>
                                </div>

                                <div class="card-footer text-end border-0 pt-0">
                                    <input type="hidden" asp-for="Id" />
                                    <button class="btn btn-primary me-3" type="submit">Xóa</button>
                                    <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Hotel" asp-action="Index">Hủy bỏ</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
