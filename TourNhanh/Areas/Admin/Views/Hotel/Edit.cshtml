@model TourNhanh.Models.Hotel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>

<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-header-2">
                            <h5>Sửa thông tin khách sạn</h5>
                        </div>

                        <form asp-action="Edit" class="theme-form theme-form-2 mega-form" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Tên khách sạn</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="Name" placeholder="Tên khách sạn" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Địa chỉ</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="Address" placeholder="Địa chỉ" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Xếp hạng</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="Rating" placeholder="Xếp hạng" />
                                        <span asp-validation-for="Rating" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label for="imageFile" class="form-label-title col-sm-2 mb-0">Hình ảnh chính</label>
                                    <div class="col-sm-10">
                                        <input type="file" id="imageFile" name="imageFile" class="form-control" onchange="previewImage(event, 'mainImagePreview')" />
                                        <img id="mainImagePreview" src="@Model.ImageUrl" alt="Main Image Preview" style="width: 100px; height: 100px;" />
                                    </div>
                                </div>

                                <div class="card-footer text-end border-0 pt-0">
                                    <input type="hidden" asp-for="Id" /> <!-- Hidden input để gửi Id của hotel -->
                                    <button class="btn btn-primary me-3" type="submit">Xác nhận</button>
                                    <a class="btn btn-outline-primary" asp-action="Index">Hủy bỏ</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function previewImage(event, previewElementId) {
        var reader = new FileReader();
        reader.onload = function () {
            var output = document.getElementById(previewElementId);
            output.src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    }
</script>
