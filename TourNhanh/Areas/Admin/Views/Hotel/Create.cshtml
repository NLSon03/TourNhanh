@model TourNhanh.Models.Hotel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-header-2">
                            <h5>Thêm khách sạn</h5>
                        </div>

                        <form asp-action="Create" class="theme-form theme-form-2 mega-form" method="post" action="" enctype="multipart/form-data">
                            <div class="row">
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Tên khách sạn</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" placeholder="Hotel Name" name="Name" required />
                                    </div>
                                </div>

                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Địa chỉ</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" placeholder="Address" name="Address" />
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Đánh giá</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" placeholder="5 sao" name="Rating" />
                                    </div>
                                </div>

                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Hình ảnh</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="file" placeholder="Image" name="ImageUrl" />
                                    </div>
                                </div>


                                <div class="card-footer text-end border-0 pt-0">
                                    <button class="btn btn-primary me-3" type="submit">Thêm</button>
                                    <button class="btn btn-outline-primary" type="reset">Reset</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>