@model TourNhanh.Models.TourDetail

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-header-2">
                            <h5>Xóa chi tiết tour</h5>
                        </div>

                        <form asp-action="Delete" asp-controller="TourDetail" asp-area="Admin" class="theme-form theme-form-2 mega-form" method="post">
                            <div class="row">
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Tour</label>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.Tour.Name)
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Địa điểm</label>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.Location.Name)
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Thứ tự</label>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.Order)
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Thời gian bắt đầu</label>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.StartTime)
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Thời gian kết thúc</label>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.EndTime)
                                    </div>
                                </div>
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Khách sạn</label>
                                    <div class="col-sm-10">
                                        @Html.DisplayFor(model => model.Hotel.Id)
                                    </div>
                                </div>

                                <div class="card-footer text-end border-0 pt-0">
                                    <input type="hidden" asp-for="Id" />
                                    <button class="btn btn-danger me-3" type="submit">Xóa</button>
                                    <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="TourDetail" asp-action="Index">Hủy bỏ</a>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

